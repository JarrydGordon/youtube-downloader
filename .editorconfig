# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Python test files
[tests/**/*.py]
indent_style = space
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf

# Configuration files
[.{editorconfig,flake8,pre-commit-config}]
indent_style = space
indent_size = 2

[pyproject.toml]
indent_style = space
indent_size = 2

[setup.py]
indent_style = space
indent_size = 4

[setup.cfg]
indent_style = space
indent_size = 2
