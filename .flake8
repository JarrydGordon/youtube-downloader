[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox,
    .mypy_cache,
    .pytest_cache,
    ffmpeg
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
